<%= form_with model: @user, url: { action: 'some_action', controller: 'users', id: @user.id } do |form| %>
  <%= form.text_field :id %>
  <%= form.text_field :name %>
  <%= form.text_field :username %>
  <%= form.submit 'Perform some action' %>
<% end %>
